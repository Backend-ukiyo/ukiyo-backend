{
    "name": "ukiyo-monorepo",
    "version": "0.0.1",
    "description": "Monorepo para el sistema Ukiyo (Delivery & Catering)",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "build:gateway": "nest build api-gateway",
        "build:usuarios": "nest build ms_usuarios",
        "build:clientes": "nest build ms_clientes",
        "build:productos": "nest build ms-productos",
        "build:proveedores": "nest build ms_proveedores",
        "build:pedidos-del": "nest build ms_pedidos_del",
        "build:inventario": "nest build ms_inventario",
        "build:pedido-cat": "nest build ms_pedido_cat",
        "build:evento": "nest build ms_evento",
        "build:all": "nest build && nest build api-gateway && nest build ms_usuarios && nest build ms_clientes && nest build ms-productos && nest build ms_proveedores && nest build ms_pedidos_del && nest build ms_inventario && nest build ms_pedido_cat && nest build ms_evento",

        "start": "nest start",
        "start:gateway": "nest start api-gateway",
        "start:usuarios": "nest start ms_usuarios",
        "start:clientes": "nest start ms_clientes",
        "start:productos": "nest start ms-productos",
        "start:proveedores": "nest start ms_proveedores",
        "start:pedidos-del": "nest start ms_pedidos_del",
        "start:inventario": "nest start ms_inventario",
        "start:pedido-cat": "nest start ms_pedido_cat",
        "start:evento": "nest start ms_evento",

        "start:dev": "nest start --watch",
        "start:dev:gateway": "nest start --watch api-gateway",
        "start:dev:usuarios": "nest start --watch ms_usuarios",
        "start:dev:clientes": "nest start --watch ms_clientes",
        "start:dev:productos": "nest start --watch ms-productos",
        "start:dev:proveedores": "nest start --watch ms_proveedores",
        "start:dev:pedidos-del": "nest start --watch ms_pedidos_del",
        "start:dev:inventario": "nest start --watch ms_inventario",
        "start:dev:pedido-cat": "nest start --watch ms_pedido_cat",
        "start:dev:evento": "nest start --watch ms_evento",

        "start:debug": "nest start --debug --watch",
        "start:debug:gateway": "nest start --debug --watch api-gateway",
        "start:debug:usuarios": "nest start --debug --watch ms_usuarios",
        "start:debug:clientes": "nest start --debug --watch ms_clientes",
        "start:debug:productos": "nest start --debug --watch ms-productos",
        "start:debug:proveedores": "nest start --debug --watch ms_proveedores",
        "start:debug:pedidos-del": "nest start --debug --watch ms_pedidos_del",
        "start:debug:inventario": "nest start --debug --watch ms_inventario",
        "start:debug:pedido-cat": "nest start --debug --watch ms_pedido_cat",
        "start:debug:evento": "nest start --debug --watch ms_evento",
        
        "start:prod": "node dist/main",
        
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "docker:up": "docker-compose up -d --build",
        "docker:down": "docker-compose down --volumes --remove-orphans",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/gateway_delivery/test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/microservices": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/typeorm": "^10.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "pg": "^8.11.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.14",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3"
    }
}