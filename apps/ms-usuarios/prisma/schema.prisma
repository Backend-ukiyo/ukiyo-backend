generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma-client/ms-usuarios"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  roles     String[] @default(["USER"]) // Ojo: Array de strings para roles simples
  isActive  Boolean  @default(true)
  
  // Relaciones
  perfil    Perfil?
  empleado  Empleado?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Usuario")
}

model Perfil {
  id        Int     @id @default(autoincrement())
  nombre    String
  apellido  String
  telefono  String?
  direccion String?
  
  // Clave foránea a Usuario (1 a 1)
  userId    String  @unique 
  user      Usuario @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Empleado {
  id               Int      @id @default(autoincrement())
  puesto           String
  salario          Float
  fechaContratacion DateTime @default(now())
  departamento     String?

  // Clave foránea a Usuario (1 a 1)
  userId           String    @unique
  user             Usuario    @relation(fields: [userId], references: [id], onDelete: Cascade)
}