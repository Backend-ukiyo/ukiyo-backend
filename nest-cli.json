{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/",
    "monorepo": true,
    "root": "apps/api-gateway",
    "compilerOptions": {
        "webpack": false,
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
    },
    "projects": {
        "api-gateway": {
        "type": "application",
        "root": "apps/api-gateway",
        "entryFile": "src/main", 
        "sourceRoot": "apps/api-gateway",
        "compilerOptions": {
            "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
        }
        },
        "ms-usuarios": {
        "type": "application",
        "root": "apps/ms-usuarios",
        "entryFile": "main",
        "sourceRoot": "apps/ms-usuarios/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-usuarios/tsconfig.app.json"
        }
        },
        "ms-clientes": {
        "type": "application",
        "root": "apps/ms-clientes",
        "entryFile": "main",
        "sourceRoot": "apps/ms-clientes/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-clientes/tsconfig.app.json"
        }
        },
        "ms-productos": {
        "type": "application",
        "root": "apps/ms-productos",
        "entryFile": "main",
        "sourceRoot": "apps/ms-productos/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-productos/tsconfig.app.json"
        }
        },
        "ms-proveedores": {
        "type": "application",
        "root": "apps/ms-proveedores",
        "entryFile": "main",
        "sourceRoot": "apps/ms-proveedores/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-proveedores/tsconfig.app.json"
        }
        },
        "ms-pedidos-del": {
        "type": "application",
        "root": "apps/ms-pedidos-del",
        "entryFile": "main",
        "sourceRoot": "apps/ms-pedidos-del/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-pedidos-del/tsconfig.app.json"
        }
        },
        "ms-inventario": {
        "type": "application",
        "root": "apps/ms-inventario",
        "entryFile": "main",
        "sourceRoot": "apps/ms-inventario/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-inventario/tsconfig.app.json"
        }
        },
        "ms-pedidos-cat": {
        "type": "application",
        "root": "apps/ms-pedidos-cat",
        "entryFile": "main",
        "sourceRoot": "apps/ms-pedidos-cat/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-pedidos-cat/tsconfig.app.json"
        }
        },
        "ms-evento": {
        "type": "application",
        "root": "apps/ms-evento",
        "entryFile": "main",
        "sourceRoot": "apps/ms-evento/src",
        "compilerOptions": {
            "tsConfigPath": "apps/ms-evento/tsconfig.app.json"
        }
        },
        "common":{
        "type": "library",
        "root": "libs/common",
        "entryFile": "index",
        "sourceRoot": "libs/common/src",
        "compilerOptions": {
            "tsConfigPath": "libs/common/tsconfig.lib.json"
        }
        }
    }
}
